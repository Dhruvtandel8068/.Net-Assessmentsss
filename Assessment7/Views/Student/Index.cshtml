@model IEnumerable<Assessment7.Models.Student>

<h2>Student List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Course</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Course</td>
                <td>@student.Age</td>
            </tr>
        }
    </tbody>
</table>
